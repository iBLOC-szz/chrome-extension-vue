{
  "manifest_version": 2,
  "name": "优大人直播助手",
  "version": "2.1.1",
  "description": "优大人直播助手",
  "default_locale": "zh_CN",
  "icons": {
    "16": "image/logo/icon_16@1x.png",
    "19": "image/logo/icon_19@1x.png",
    "24": "image/logo/icon_24@1x.png",
    "32": "image/logo/icon_32@1x.png",
    "38": "image/logo/icon_38@1x.png",
    "48": "image/logo/icon_48@1x.png",
    "128": "image/logo/icon_128@1x.png",
    "256": "image/logo/icon_256@1x.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "image/logo/icon_16@1x.png",
      "19": "image/logo/icon_19@1x.png",
      "24": "image/logo/icon_24@1x.png",
      "32": "image/logo/icon_32@1x.png",
      "38": "image/logo/icon_38@1x.png",
      "48": "image/logo/icon_48@1x.png",
      "128": "image/logo/icon_128@1x.png",
      "256": "image/logo/icon_256@1x.png"
    },
    "default_title": "优大人直播助手",
    "default_popup": "html/popup.html"
  },
  "background": {
    "persistent": true,
    "page": "html/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "javascript/loader.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://*.udaren.com https://*.ibloc.cn https://*.mmstat.com https://*.cnzz.com https://*.aliyuncs.com http://localhost:8080; object-src 'self'",
  "options_ui": {
    "chrome_style": true,
    "open_in_tab": true,
    "page": "html/options.html"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "background",
    "bookmarks",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "cookies",
    "debugger",
    "declarativeContent",
    "desktopCapture",
    "downloads",
    "fontSettings",
    "gcm",
    "geolocation",
    "history",
    "identity",
    "idle",
    "management",
    "nativeMessaging",
    "notifications",
    "pageCapture",
    "power",
    "printerProvider",
    "privacy",
    "proxy",
    "sessions",
    "storage",
    "system.cpu",
    "system.display",
    "system.memory",
    "system.storage",
    "tabCapture",
    "tabs",
    "topSites",
    "tts",
    "ttsEngine",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "*://*.taobao.com/",
    "*://*.leanapp.cn/",
    "*://*.ibloc.cn/",
    "*://*.udaren.com/",
    "*://*.cnzz.com/",
    "*://*.mmstat.com/",
    "*://*.aliyuncs.com/"
  ]
}
